[root@node2 ~]# udevadm settle


-----------------------------------


CREATE LV WITH FDISK

pvcreate /dev/sdb1

vgcreate -s 8M wgroup /dev/sdb1

lvcreate -n wshare -l 50 /dev/wgroup   # -l to specify number of extents, -L to specify size MB, GB

----------------------------------


