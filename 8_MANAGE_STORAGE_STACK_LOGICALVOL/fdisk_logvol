CREATE PARTITIONS WITH FDISK/GDISK

[root@node2 ~]# lsblk --f
NAME   FSTYPE FSVER LABEL UUID                                 FSAVAIL FSUSE% MOUNTPOINTS
sda
├─sda1 vfat   FAT16       7CBD-BC37                             192.3M     4% /boot/efi
└─sda2 xfs          root  5325b13a-bb70-45be-bb4b-a5b7ad189838   16.1G    18% /
sdb
